# LiveKit Configuration
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Configuration (for Voice AI Agent)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Agent Configuration
ENABLE_AGENT_MOCK=1          # Set to 0 to enable real agent (requires livekit-agents)
ENABLE_VOICE_AI=0            # Set to 1 to enable full voice AI agent (requires OpenAI API key)
FORCE_MOCK_GROQ=0            # Set to 1 to force mock summaries for testing
PERSIST_DB_PATH=             # Optional custom path for SQLite persistence